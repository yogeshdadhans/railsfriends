<div class="card">
  <div class="card-header">
    <h4>Log in</h4>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group row mb-3">
      <%= f.email_field :email, class:"form-control", placeholder:"Enter Email", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field form-group row mb-3">
      <%= f.password_field :password, class:"form-control", placeholder:"Enter Password", autocomplete: "current-password" %>
    </div>
    </br>
    <% if devise_mapping.rememberable? %>
      <div class="field form-group">
        <%= f.check_box :remember_me, class:"form-check-input" %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    </br>
    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-secondary" %>
    </div>
  <% end %>
  </div>
</div>
</br>

<%= render "devise/shared/links" %>
